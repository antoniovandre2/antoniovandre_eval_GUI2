	cmd = 'wget -T TIMEOUTMENSAGEM -qO- https://bit.ly/antoniovandreevalguimensagemdl 2>> /dev/null > '

	processo = subprocess.Popen (cmd, shell=True, stdout=subprocess.PIPE)

